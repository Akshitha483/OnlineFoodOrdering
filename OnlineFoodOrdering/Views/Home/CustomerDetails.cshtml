@model OnlineFoodOrdering.Models.CustomerDetails
@{
    ViewData["Title"] = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="headings">CUSTOMER DETAILS</h1>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/customerdetails.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body style="background: url(/images/bgpic.JPG)no-repeat  center center/cover ">
    <div class="row">
        <div class="col-75">
            <div class="container">
                <form method="post">
                    <div class="row">
                        <div class="col-50">
                            <div class="col-50">
                                <h3>Billing Address</h3>
                                <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                                <input type="text" asp-for="FullName" id="fname" name="firstname" placeholder="XYZ">
                                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                                <input type="text" asp-for="Email" id="email" name="email" placeholder="XYZ@example.com">
                                <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                                <input type="text" asp-for="Address" id="adr" name="address" placeholder="abcd...">
                                <label for="city"><i class="fa fa-institution"></i> City</label>
                                <input type="text" asp-for="City" id="city" name="city" placeholder=".....">

                                <div class="row">
                                    <div class="col-50">
                                        <label for="state">State</label>
                                        <input type="text" asp-for="State" id="state" name="state" placeholder="NY">
                                    </div>
                                    <div class="col-50">
                                        <label for="zip">Zip</label>
                                        <input type="text" asp-for="Zip" id="zip" name="zip" placeholder="10001">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <h3>Payment</h3>
                <label for="fname">Accepted Mode</label>
                <label>
                    <input type="checkbox" checked="checked" name="sameadr"> Cash On Delivery(COD)
                </label>
                <label>
                    <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                </label>
                <div class=" p-3 bg-white text-center text-white cursor"> <a href="/Home/Success"><button class="btn btn-primary">Submit</button></a> </div>
            </div>
            
        </div>
        
    </div>
     
   
</body>
</html>
